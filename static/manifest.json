{
  "name": "UzzeStore - Moda com Estilo",
  "short_name": "UzzeStore",
  "description": "Descubra as últimas tendências em moda na UzzeStore",
  "start_url": "/mobile",
  "display": "standalone",
  "background_color": "#f8f9fa",
  "theme_color": "#000000",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "pt-BR",
  "dir": "ltr",
