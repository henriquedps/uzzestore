    },
    {
      "src": "/static/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "shortcuts": [
    {
      "name": "Ver Produtos",
      "short_name": "Produtos",
      "description": "Navegar pelos produtos em destaque",
      "url": "/mobile",
      "icons": [
        {
          "src": "/static/icons/shortcut-products.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Carrinho",
      "short_name": "Carrinho",
      "description": "Ver carrinho de compras",
      "url": "/carrinho",
      "icons": [
        {
          "src": "/static/icons/shortcut-cart.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Favoritos",
      "short_name": "Favoritos",
      "description": "Ver produtos favoritos",
      "url": "/favoritos",
      "icons": [
        {
          "src": "/static/icons/shortcut-favorites.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Perfil",
      "short_name": "Perfil",
      "description": "Acessar perfil do usuário",
      "url": "/perfil",
      "icons": [
        {
          "src": "/static/icons/shortcut-profile.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "related_applications": [],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 480
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+uzzerstore",
      "url": "/product?id=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/share",
      "accept": {
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp"]
      }
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "images",
          "accept": ["image/*"]
        }
      ]
    }
  }
}